<h1><%= @post.title %></h1>
<div class="row">
<div class="col-sm-8 col-sm-offset-2"><%= @post.content %></div>
</div>

<p><%= link_to "Edit", edit_post_path(@post), class: 'btn' %> <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this post?"}, class: 'btn' %></p>