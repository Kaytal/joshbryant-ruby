<article>
	<header>
		<h1 class="text-center">
			<%= @post.title %><br />
			<small class="date"><%= @post.created_at.strftime('%A, %B %d') %></small>
		</h1>
		<hr>
	</header>
	<div class="row">
		<div class="col-sm-8 col-sm-offset-2"><%= @post.content %></div>
	</div>
	<div classs="row">
		<hr>
		<div class="col-sm-8 col-sm-offset-2 text-center">
			<p>Share</p>
			<a onclick="javascript:window.open('http://twitter.com/share?text=<%= @post.title %> by @kaytal1 - $amp;url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-twitter"></i></a>
			<a onclick="javascript:window.open('http://facebook.com/sharer.php?u=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-facebook"></i></a>
			<a onclick="javascript:window.open('http://twitter.com/share?url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-google-plus"></i></a>
		</div>
	</div>
	</div>
	<footer class="row">
		<div class="col-sm-12">
			<p class="text-center"><%= link_to "Edit", edit_post_path(@post), class: 'btn' %> <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this post?"}, class: 'btn' %></p>
		</div>
	</footer>
</article>